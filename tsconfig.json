{
    "compileOnSave": true,
    "declaration": true,
    "compilerOptions": {
        //"module": "amd",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "lib": [
            "es2015",
            "dom"
        ],
        "outDir": "dist"
        ///"outFile": "./build/dots.js"
    },
    "rootDir": "lib",
    "include": [
        "*",
        // "**/*",
        "lib/*.ts",
        "lib/common/*.ts",
        "test/*",
        "test/account/*",
        "test/size/*",
        "test/tag/*",
        "test/region/*",
        "test/action/*",
        "test/sshkey/*"
    ],
    "exclude": [
        "node_modules/*",
        "./common.ts",
        "./node_modules/*"
        // "./lib/*/*"
    ]
}
